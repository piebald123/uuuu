<Page x:Class="VDOLPZZZ.Pages.addYchet"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VDOLPZZZ.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="addYchet">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
            <TextBlock Text="Редактор" Margin="5"/>
            <TextBox Text="{Binding Kod_Predpriytie}" Margin="5"/>
            <TextBox Text="{Binding Naimenovanit_Prodykcie}" Margin="5"/>
            <TextBox Text="{Binding Kolichestvo}" Margin="5"/>
            <TextBox Text="{Binding Cena}" Margin="5"/>
            <Button x:Name="SaveBtn" Content="Сохранить" Margin="5" Width="150" Height="30" Click="SaveBtn_Click"/>
            <Button x:Name="BackBtn" Content="Отменить" Margin="5" Width="150" Height="30" Click="BackBtn_Click"/>
        </StackPanel>

    </Grid>
</Page>
