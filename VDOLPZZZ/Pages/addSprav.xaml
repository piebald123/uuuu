<Page x:Class="VDOLPZZZ.Pages.addSprav"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VDOLPZZZ.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="addSprav">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
            <TextBlock Margin="5"><Run Language="ru-ru" Text="Редактор"/></TextBlock>
            <TextBox Text="{Binding Naimenovanie}" Margin="5"/>
            <TextBox Text="{Binding Adres}" Margin="5"/>
            <TextBox Text="{Binding FIO}" Margin="5"/>
            <Button x:Name="SaveBtn" Content="Сохранить" Margin="5" Width="150" Height="30" Click="Savebtn_Click"/>
            <Button x:Name="BackBtn" Content="Отменить" Margin="5" Width="150" Height="30" Click="Backbtn_Click"/>
        </StackPanel>

    </Grid>
</Page>
